{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./ts",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pkg",
    "target",
    "tests"
  ]
}